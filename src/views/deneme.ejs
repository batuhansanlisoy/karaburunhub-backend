<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>

  <!-- AG Grid CSS -->
  <link rel="stylesheet" href="/ag-grid-community/styles/ag-grid.css">
  <link rel="stylesheet" href="/ag-grid-community/styles/ag-theme-alpine.css">

  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
    }
  </style>
</head>
<body>
  <h2>AG Grid Deneme Tablosu</h2>

  <div id="myGrid" class="ag-theme-alpine" style="height: 400px; width: 600px;"></div>

  <!-- AG Grid JS -->
  <script src="/ag-grid-community/dist/ag-grid-community.noStyle.js"></script>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const columnDefs = [
        { headerName: "Marka", field: "make" },
        { headerName: "Model", field: "model" },
        { headerName: "Fiyat", field: "price" }
      ];

      const rowData = <%- JSON.stringify(rowData) %>;

      const gridOptions = {
        columnDefs,
        rowData,
        defaultColDef: {
          sortable: true,
          filter: true,
          resizable: true
        }
      };

      const eGridDiv = document.querySelector('#myGrid');
      new agGrid.Grid(eGridDiv, gridOptions);
    });
  </script>
</body>
</html>
